<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_field_ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#635D39">

    <ImageView
        android:id="@+id/game_field_InfoBar_iv"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/game_field_back_img"
        app:layout_constraintEnd_toEndOf="@+id/game_field_back_img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/game_field_back_img"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/no_winner" />

    <ImageView
        android:id="@+id/game_field_back_img"
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/game_field_top_img"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/game_field_back_img"
        app:layout_constraintEnd_toEndOf="@+id/game_field_back_img"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/game_field_back_img"
        app:layout_constraintTop_toTopOf="@+id/game_field_back_img"
        app:srcCompat="@drawable/back" />

</androidx.constraintlayout.widget.ConstraintLayout>